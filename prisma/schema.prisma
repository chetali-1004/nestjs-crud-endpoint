generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Voucher {
  id                 Int      @id @default(autoincrement())
  code               String   @unique
  discount           Float
  type               String
  target             String
  applicableProducts String[] @default([])
  startDate          DateTime
  endDate            DateTime
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("vouchers")
}

